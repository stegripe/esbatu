{
    "entry": ["src/index.ts"],
    "format": ["esm", "cjs"],
    "platform": "node",
    "target": "es2022",
    "skipNodeModulesBundle": true,
    "clean": true,
    "shims": true,
    "cjsInterop": true,
    "minify": false,
    "terserOptions": {
        "mangle": false,
        "keep_classnames": true,
        "keep_fnames": true
    },
    "splitting": false,
    "keepNames": true,
    "dts": true,
    "sourcemap": true,
    "treeshake": false,
    "outDir": "dist"
}
